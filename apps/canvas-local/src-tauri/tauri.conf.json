{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Canvas Local",
  "version": "0.1.0",
  "identifier": "com.canvas-local.app",
  "build": {
    "frontendDist": "../dist",
    "beforeBuildCommand": "bun run build",
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Canvas Local",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob: https: wss:; connect-src 'self' https: wss:; img-src 'self' data: blob: https:; media-src 'self' data: blob: https:; font-src 'self' data: https:"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "msi", "nsis", "dmg", "app", "updater"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png", 
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Education",
    "shortDescription": "Desktop client for Canvas LMS",
    "longDescription": "Canvas Local is a desktop application for interacting with Canvas LMS, providing offline access and enhanced productivity features.",
    "copyright": "Copyright (c) 2024 Canvas Local",
    "homepage": "https://github.com/aaronshaf/panda",
    "publisher": "Canvas Local Team",
    "resources": []
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [],
      "dialog": true,
      "pubkey": ""
    }
  }
}
